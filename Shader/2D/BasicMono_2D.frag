/*#########################################################################
# 単色の二次元描画　フラグメントシェーダー
###########################################################################*/
#version 420
#extension GL_ARB_explicit_uniform_location : require

// ###################### 入力 ###################### 
layout(location = 2) in vec4 vfragment;	//カラー

// ###################### 出力 ###################### 
out vec4 fragment;

void main()
{
	fragment = vfragment;
}